<Window x:Class="RevitParametericDesignPreviewTool.ParametericDesignControl"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:wfi="clr-namespace:System.Windows.Forms.Integration;assembly=WindowsFormsIntegration"
        xmlns:xctk="http://schemas.xceed.com/wpf/xaml/toolkit"
        Title="参数化箍筋预览"
        Width="720" Height="600"
        WindowStartupLocation="CenterOwner">
    <Grid Margin="10">
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="200"/>
            <ColumnDefinition Width="*"/>
        </Grid.ColumnDefinitions>

        <!-- 左侧参数区 -->
        <Grid Grid.Column="0">
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="*"/>
            </Grid.RowDefinitions>

            <Label x:Name="lbTitle"
                   Grid.Row="0"
                   Content="参数" HorizontalAlignment="Center"
                   FontSize="18"
                   FontWeight="SemiBold"
                   Margin="0,0,0,12"/>

            <Grid x:Name="parametersTableLayoutPanel" Grid.Row="1" Margin="0,8,0,8">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="100"/>
                    <ColumnDefinition Width="*"/>
                </Grid.ColumnDefinitions>
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                </Grid.RowDefinitions>

                <!-- 箍筋间距（mm） -->
                <Label x:Name="lbRebarSpacing" Grid.Row="0" Grid.Column="0" Content="箍筋间距 (mm)：" />
                <xctk:IntegerUpDown x:Name="numInputRebarSpacing"
                                    Grid.Row="0" Grid.Column="1"
                                    Margin="4"
                                    Minimum="100"
                                    Maximum="200"
                                    Increment="5"
                                    Value="100" />

                <!-- 保护层（mm） -->
                <Label x:Name="lbRebarCoverSpace" Grid.Row="1" Grid.Column="0" Content="保护层 (mm)：" />
                <xctk:IntegerUpDown x:Name="numInputRebarCoverSpace"
                                    Grid.Row="1" Grid.Column="1"
                                    Margin="4"
                                    Minimum="0"
                                    Maximum="150"
                                    Increment="1"
                                    Value="40" />

                <!-- 钢筋类型 -->
                <Label x:Name="lbRebarTyep" Grid.Row="2" Grid.Column="0" Content="钢筋类型：" />
                <ComboBox x:Name="cmbRebarType" Grid.Row="2" Grid.Column="1" Margin="4"/>

                <!-- 钢筋形状 -->
                <Label x:Name="lbRebarShape" Grid.Row="3" Grid.Column="0" Content="钢筋形状：" />
                <ComboBox x:Name="cmbRebarShape" Grid.Row="3" Grid.Column="1" Margin="4"/>

                <!-- 操作区 -->
                <StackPanel x:Name="tableLayoutPanel1" Grid.Row="4" Grid.Column="0" Grid.ColumnSpan="2" HorizontalAlignment="Center" Orientation="Horizontal" Margin="0,8,0,0">
                    <Button x:Name="btnApplyChange" Content="应用更改" Width="120" Height="30" Margin="0,0,12,0"/>
                    <TextBlock x:Name="pbSpinner" Text="处理中..." VerticalAlignment="Center" Visibility="Collapsed"/>
                </StackPanel>
            </Grid>
        </Grid>

        <!-- 右侧预览区 -->
        <Grid Grid.Column="1" x:Name="rvtPreviewControlHost" Margin="8,0,0,0">
        </Grid>
    </Grid>
</Window>